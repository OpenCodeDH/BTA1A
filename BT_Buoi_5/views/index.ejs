<!DOCTYPE html>
<html>

<head>
  <title>users</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Fullname</th>
        <th scope="col">birt Day</th>
        <th scope="col">intership</th>
        <th scope="col">gender</th>
        <th scope="col">Current Job</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user,index){ %>
      <tr>
        <th scope="row"><%= index+1%></th>
        <td><a href="<%= user.id %>"><%= user.fullname %></a> </td>
        <td><%= user.birtday %> </td>
        <td><%= user.intership %> </td>
        <td><%= user.gender %> </td>
        <td><%= user.currentjob %> </td>
      </tr> 
      <% }); %>
    </tbody>
  </table>
  <br>
  <br>
  <div class="row">
    <div class="col-6">
      <div  style="width: 400px;">
        <form method="post"  action="/name"  class="mb-3">
          <h6><i class="fa fa-warning" aria-hidden="true"></i>Tìm kiếm bằng nhập tên</h6>
          <div class="row">
            <div class="col">
              <input type="text" class="form-control" id="exampleFormControlInput1" name="value" placeholder="Tung">
            </div>
            <div class="col">
              <button style="width: 100px;" type="submit" class="btn btn-primary">Search</button>
            </div>
          </div>
        </form>
      </div>
    </div>
      <div class="col-6 col-sm-6">
        <h6><i class="fa fa-warning" aria-hidden="true"></i>tìm kiếm bằng giới tính</h6>
        <form method="post"  action="/gender"  class="mb-3">
          <select name="value" id="">
            <option value="nam">nam</option>
            <option value="nu">nữ</option>
          </select>
          <button type="submit" class="btn btn-primary">Search</button>
        </form>
      </div>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>